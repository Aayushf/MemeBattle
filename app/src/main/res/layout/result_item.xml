<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/response_item_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_margin"
    app:cardBackgroundColor="@color/cardBackGround">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:orientation="vertical">

        <memebattle.aayushf.memebattle.FontedTextView
            android:id="@+id/textAll"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            android:text="Top Caption"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@color/accent"
            app:textfont="SemiBold" />

        <memebattle.aayushf.memebattle.FontedTextView
            android:id="@+id/item_bottom"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textAll"
            android:layout_margin="@dimen/default_margin"
            android:text="Bottom Caption"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@color/accent"
            app:textfont="SemiBold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <memebattle.aayushf.memebattle.FontedTextView
                android:id="@+id/name_result_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:text="Name"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                app:textfont="SemiBold" />

            <memebattle.aayushf.memebattle.FontedTextView
                android:id="@+id/selections_result_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="100"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                app:textfont="SemiBold" />
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>