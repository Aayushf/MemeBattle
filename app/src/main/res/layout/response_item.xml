<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/response_item_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/small_margin"
    app:cardBackgroundColor="@color/cardBackGround">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_margin"
        android:orientation="vertical">

        <memebattle.aayushf.memebattle.FontedTextView
            android:id="@+id/item_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_margin"
            android:text="Top Caption"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="27sp"
            app:textfont="Bold" />

        <memebattle.aayushf.memebattle.FontedTextView
            android:id="@+id/item_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_margin"
            android:text="Bottom Caption"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="27sp"
            app:textfont="Bold" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/select_fab_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/small_margin"
            android:src="@drawable/ic_favorite_border_black_24dp" />
    </LinearLayout>
</android.support.v7.widget.CardView>